<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well wll-lg">
      <div class="article-title">
        <%= link_to article.title, article %>
      </div>

      <div class="article-description">
        <%= truncate(article.description, length:100) %>
      </div>
      <div class="article-description-details">
        <small>Created by: <%= article.user.username %>, <%= time_ago_in_words(article.created_at) %> ago</small>
      </div>
      <% if article.categories.any? %>
        <p>
          Categories: <%= render article.categories %>
        </p>
      <% end %>
      <% if logged_in? && current_user.admin? %>
        <div class="article-description-details">
          <%= link_to "Edit Article", edit_article_path(article), class:"btn btn-primary" %>
          <%= link_to "Delete Article", article, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
