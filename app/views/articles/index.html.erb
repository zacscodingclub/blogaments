<h1 class="text-center">All Articles</h1>
<% if logged_in? %>
  <div class="col-xs-offset-2">
    <%= link_to "Create an article", new_article_path, class:"btn btn-primary" %>
  </div>
<% end %>
<br>
<% if @articles.any? %>
  <div align="center">
    <%= will_paginate %>
  </div>

  <% @articles.each do |article| %>
    <%= render 'article', article: article %>
  <% end %>
  
  <div align="center">
    <%= will_paginate %>
  </div>
<% else %>
  <p>
    There aren't any articles yet.  Sign up to be the first!
  </p>
  <% link_to "Signup", signup_path, class:"btn btn-primary" %>
<% end %>
