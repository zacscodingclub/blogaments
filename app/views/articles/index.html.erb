<h1 class="text-center">All Articles</h1>
<% if logged_in? %>
  <div class="col-xs-offset-2">
    <%= link_to "Create an article", new_article_path, class:"btn btn-primary" %>
  </div>
<% end %>
<br>
<% if @articles.any? %>
  <div align="center">
    <%= will_paginate %>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <% @articles.each do |article| %>
      <div class="well wll-lg">
          <div class="article-title">
            <%= link_to article.title, article %>
          </div>

          <div class="article-description">
            <%= truncate(article.description, length:100) %>
          </div>
          <div class="article-description-details">
            <small>Created by: <%= article.user.username %>, <%= time_ago_in_words(article.created_at) %> ago</small>
          </div>
          <% if current_user.admin? %>
            <div class="article-description-details">
              <%= link_to "Edit Article", edit_article_path(article), class:"btn btn-primary" %>
              <%= link_to "Delete Article", @article, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger" %>
            </div>
          <% end %>
      </div>
      <% end %>
    </div>
  <div align="center">
    <%= will_paginate %>
  </div>
<% else %>
  <p>
    There aren't any articles yet.  Sign up to be the first!
  </p>
  <% link_to "Signup", signup_path, class:"btn btn-primary" %>
<% end %>
